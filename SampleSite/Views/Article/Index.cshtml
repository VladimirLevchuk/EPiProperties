@model SampleSite.Models.Pages.ArticlePage

@{
    ViewBag.Title = Model.PageName;
    ViewBag.PageName = Model.PageName;
}

<h2> @Model.Heading </h2>

<nav>
    <a href="@Url.PageUrl(Model.Parent.LinkURL)"> Parent </a>
</nav>

<p>
    @Model.Intro
</p>

@Html.XhtmlString(Model.Body)

<hr/>

<nav>
    <h2>Breadcrumbs</h2>
    <ul>
        @foreach (var page in Model.Ancestors.Where(x => x.IsAvailableInMenu && x.IsAvailableForCurrentUser).Reverse())
        {
            <li>
                @Html.PageLink(page)
            </li>
        }
    </ul>
</nav>

<hr/>